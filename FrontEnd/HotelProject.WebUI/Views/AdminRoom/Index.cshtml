@model List<ResultRoomDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Room Number</th>
        <th>Room Title</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RoomID</td>
            <td>@item.RoomNumber</td>
            <td>@item.RoomTitle</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger">Remove</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-primary">Update</a></td>
        </tr>
    }
</table>

<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-outline-success">Add New Room</a>