@model ResultContactDto
@{
    ViewData["Title"] = "IncomingMessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSentMessage/" class="btn btn-primary btn-block">New Message</a>

    @await Html.PartialAsync("SideBarPartialAdminContact")

    <h5 class="mt-5 m-b-10">Categories</h5>

    @await Html.PartialAsync("SideBarCategoryPartialAdminContact")

</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                Inbox <span class="caret m-l-5"></span>
            </button>
        </div>
    </div>

    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.Name</h5>
                <p class="m-b-2"><div class="date">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</div></p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">@Model.Mail</small>
            </div>
        </div>
        <p>@Model.Message</p>
        <hr>
    </div>

</div>



